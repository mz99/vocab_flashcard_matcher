<h1>Editing word: <%= @vocab.word %></h1>

<%= form_for :vocab, url: vocab_path(@vocab), method: :patch do |f| %>

  <p>
    <%= f.label :word %><br>
    <%= f.text_field :word %>
  </p>

  <p>
    <%= f.label :definition %><br>
    <%= f.text_area :definition %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back to index', vocab_index_path %>
